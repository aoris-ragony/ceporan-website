---
// src/components/HomeNews.astro
import { client, urlFor } from '../lib/sanity';
import styles from './HomeNews.module.css'; // Kita buat CSS-nya nanti

// src/components/sections/NewsSection.astro
import NewsCard from './NewsCard.astro';

// --- QUERY DATA BERITA ---
// Kita namakan variabel ini 'latestNews' agar cocok dengan looping di bawah
const latestNews = await client.fetch(`*[_type == "news"] | order(date desc)[0..2] {
  "title": coalesce(title, judul, name),
  "slug": slug.current,
  "date": coalesce(date, publishedAt, tanggal, _createdAt),
  "image": gambarUtama.asset->url,
  // Ambil paragraf pertama dari Portable Text untuk deskripsi singkat
  "description": isiBerita[0].children[0].text,
  // PENTING: Ambil data tags/kategori
  "tags": categories[]->title 
}`);
---

<section id="news" class="news-section">
  <div class="container">
    
    <div class="section-header">
      <h2>Berita Terkini</h2>
      <p>Informasi terbaru seputar kegiatan dan pengumuman Desa Ceporan</p>
    </div>

    <div class="news-grid">
      {/* Cek apakah ada berita */}
      {latestNews && latestNews.length > 0 ? (
        latestNews.map((news) => (
          <NewsCard 
            title={news.title}
            slug={news.slug}
            date={news.date}
            image={news.image}
            description={news.description}
            tags={news.tags} 
          />
        ))
      ) : (
        <div class="empty-state">
          <p>Belum ada berita yang diterbitkan.</p>
        </div>
      )}
    </div>

    <div class="cta-container">
      <a href="/news" class="btn-secondary">Lihat Semua Berita &rarr;</a>
    </div>

  </div>
</section>

<style>
  .news-section {
    padding: 5rem 1rem;
    background-color: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #111827;
    margin-bottom: 0.5rem;
  }

  .news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .cta-container {
    text-align: center;
  }

  .btn-secondary {
    display: inline-block;
    padding: 0.8rem 2rem;
    border: 2px solid #1a56db;
    color: #1a56db;
    text-decoration: none;
    font-weight: 600;
    border-radius: 8px;
    transition: all 0.3s;
  }

  .btn-secondary:hover {
    background-color: #1a56db;
    color: white;
  }

  .empty-state {
    text-align: center;
    width: 100%;
    grid-column: 1 / -1;
    padding: 2rem;
    background: #f9fafb;
    border-radius: 8px;
    color: #6b7280;
  }
</style>