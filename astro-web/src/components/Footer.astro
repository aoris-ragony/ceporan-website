<style>
  .site-footer {
    background-color: #111827; /* Warna Gelap Premium */
    color: #f3f4f6;
    padding: 4rem 1rem 1rem 1rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr; /* Membagi 2 kolom sama besar */
    gap: 3rem;
  }

  /* Styling Judul */
  .footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #fff;
    border-bottom: 3px solid #1a56db; /* Garis biru di bawah judul */
    display: inline-block;
    padding-bottom: 0.5rem;
  }

  .footer-desc {
    margin-bottom: 2rem;
    line-height: 1.6;
    color: #d1d5db;
  }

  /* Styling Kontak */
  .contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.2rem;
  }

  .icon {
    font-size: 1.5rem;
    margin-right: 1rem;
    margin-top: -3px;
  }

  .contact-item p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .contact-item a {
    color: #60a5fa; /* Warna link biru muda */
    text-decoration: none;
  }

  .contact-item a:hover {
    text-decoration: underline;
    color: #93c5fd;
  }

  /* Styling Peta */
  .map-wrapper {
    width: 100%;
    height: 300px; /* Tinggi peta */
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.5);
  }
  
  /* Copyright di paling bawah */
  .copyright {
    text-align: center;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #374151;
    font-size: 0.9rem;
    color: #9ca3af;
  }

  /* Responsif untuk HP (Jadi 1 Kolom ke bawah) */
  @media (max-width: 768px) {
    .footer-container {
      grid-template-columns: 1fr; /* Jadi 1 kolom */
      gap: 2rem;
    }
    
    .map-wrapper {
      height: 250px; /* Peta sedikit lebih kecil di HP */
    }
  }
</style>