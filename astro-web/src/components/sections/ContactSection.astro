---
// astro-web\src\components\sections\ContactSection.astro
import { client } from  '../../lib/sanity';
import LeafletMap from '../LeafletMap.astro';
// 1. Ambil data profil (ambil yang pertama ditemukan / [0])
const profile = await client.fetch(`*[_type == "profileType"][0]`);

// 2. Siapkan data default (jaga-jaga kalau Sanity belum diisi)
/*const data = {
  alamat: profile?.alamat || "-",
  email: profile?.email || "-",
  telepon: profile?.telepon || "-",
  whatsapp: profile?.whatsapp || "-",
  jamKerja: profile?.jamKerja || "-"
};
*/
---

<section id="kontak" class="contact-section">
  <div class="container">
    <div class="section-header">
      <h2>Hubungi Kami</h2>
      <p>Layanan Masyarakat & Informasi {profile?.namaDesa || "Desa"}</p>
    </div>

    <div class="contact-grid">
      <div class="info-card">
        
        <div class="info-item">
          <h3>üìç Alamat Kantor</h3>
          <p style="white-space: pre-line">{profile.alamat}</p>
        </div>

        <div class="info-item">
          <h3>üïí Jam Operasional</h3>
          <p style="white-space: pre-line">{profile.jamKerja}</p>
        </div>

        <div class="info-item">
          <h3>üìû Kontak Digital</h3>
          <p>Email: <a href={`mailto:${profile.email}`}>{profile.email}</a></p>
          <p>Telepon: {profile.telepon}</p>
        </div>
        
        <a href={`https://wa.me/${profile.whatsapp}`} class="wa-button" target="_blank">
           Chat via WhatsApp ‚Üí
        </a>
      </div>

        <div class="map-card">
            <LeafletMap />
        </div>
    </div>

  </div>
</section>

<style>
  .contact-section {
    padding: 5rem 1rem;
    background-color: #f9fafb; /* Warna abu-abu sangat muda */
    scroll-margin-top: 100px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #111827;
    margin-bottom: 0.5rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr; /* 2 Kolom */
    gap: 2rem;
    align-items: stretch; /* Tinggi kolom sama */
  }

  /* Kartu Info */
  .info-card {
    background: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .info-item {
    margin-bottom: 2rem;
  }

  .info-item h3 {
    font-size: 1.2rem;
    color: #1a56db; /* Biru */
    margin-bottom: 0.5rem;
  }

  .info-item p {
    color: #4b5563;
    line-height: 1.6;
  }

  .wa-button {
    display: inline-block;
    background-color: #25D366; /* Warna WA */
    color: white;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    margin-top: 1rem;
    transition: background 0.3s;
  }

  .wa-button:hover {
    background-color: #1ebc57;
  }

  /* Kartu Peta */
  .map-card {
    border-radius: 12px;
    overflow: hidden;
    min-height: 400px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  /* Responsif HP */
  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr; /* Jadi 1 kolom */
    }
    .map-card {
      height: 300px;
    }
  }
</style>