---
import styles from '../styles/theme.module.css';

// Simulasi data dari Sanity (Nanti akan diganti dengan fetching asli)
const dummyNews = [
  {
    title: "Pembangunan Jembatan Desa Ceporan Tahap I Selesai",
    date: "02 Feb 2026",
    excerpt: "Pemerintah desa mengumumkan penyelesaian tahap pertama jembatan penghubung antar dusun yang kini sudah bisa dilewati kendaraan roda dua...",
    image: "https://via.placeholder.com/400x200"
  },
  {
    title: "Pelatihan UMKM Digital Bagi Warga Desa",
    date: "01 Feb 2026",
    excerpt: "Meningkatkan ekonomi desa melalui digitalisasi, puluhan warga antusias mengikuti pelatihan pemasaran produk melalui media sosial...",
    image: "https://via.placeholder.com/400x200"
  },
  {
    title: "Jadwal Posyandu Serentak Bulan Februari",
    date: "30 Jan 2026",
    excerpt: "Diharapkan seluruh orang tua yang memiliki balita untuk hadir pada jadwal posyandu guna pemantauan tumbuh kembang anak...",
    image: "https://via.placeholder.com/400x200"
  }
];

---

<section class={styles.newsSection}>
  <div class={styles.container}>
    <div class={styles.sectionHeader}>
      <div>
        <h2 style="font-size: 2rem; color: #111827;">Berita Terbaru</h2>
        <p style="color: #6b7280;">Informasi terkini seputar kegiatan di desa</p>
      </div>
      <a href="/news" class={styles.readMore}>Lihat Semua &rarr;</a>
    </div>

    <div class={styles.newsGrid}>
      {dummyNews.map((item) => (
        <article class={styles.newsCard}>
          <img src={item.image} alt={item.title} class={styles.newsImage} />
          <div class={styles.newsContent}>
            <span class={styles.newsDate}>{item.date}</span>
            <h3 class={styles.newsTitle}>{item.title}</h3>
            <p class={styles.newsExcerpt}>{item.excerpt}</p>
            <a href="/news" class={styles.readMore}>Baca Selengkapnya</a>
          </div>
        </article>
      ))}
      <slot>
        
      </slot>
    </div>
  </div>
</section>